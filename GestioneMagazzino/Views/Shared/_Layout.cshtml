<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestioneMagazzino</title>
    <link rel="stylesheet" href="~/assets/css/web-app.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark navbar-toggleable-sm border-bottom box-shadow mb-3 fixed-top">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GestioneMagazzino</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="LogIn">Login</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Auth" asp-action="LogOut">LogOut</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-h-60">
        <partial name="_CookieConsentPartial" />
       
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - GestioneMagazzino - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <div id="spinner" class="position-fixed " style="z-index: 1040; top:0; left: 0; bottom: 0; right: 0; background-color: rgba(0, 0, 0, 0.5);">
        <div class="d-flex w-100 h-100 justify-content-center align-items-center ">
            <i class="fas fa-spinner fa-spin d-flex align-items-center justify-content-center fa-4x text-white"></i>
        </div>
    </div>

<script src="~/assets/js/web-app.min.js"></script>
<script>
    window.onload = function() {
        $('#spinner').css('display', 'none');
    }
</script>
    @RenderSection("Scripts", required: false)
</body>
</html>
